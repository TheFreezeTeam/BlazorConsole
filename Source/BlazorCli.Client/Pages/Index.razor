<button class="btn btn-primary" @onclick="@ButtonClick">Click me</button>

@code
{
  public string Junk { get; set; }
  internal void ButtonClick() =>
      Junk += "*";

  protected void HandleKeyPress(UIKeyboardEventArgs aUIKeyboardEventArgs)
  {
    Console.WriteLine($"HandleKeyPress Key:{aUIKeyboardEventArgs.Key} Junk:{Junk}");
    Junk += "x";
  }
}